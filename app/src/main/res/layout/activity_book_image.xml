<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".camera">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_back_sign"
                android:layout_width="57dp"
                android:layout_height="55dp"
                android:background="#00ff0000"
                android:text="back"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/login_txt2"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_gravity="clip_horizontal|center|center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:text="BookMarK"
                android:textColor="#040303"
                android:textSize="50sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/Click_img1"
                android:layout_width="match_parent"
                android:layout_height="294dp"
                app:srcCompat="@drawable/books" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="138dp"
                    android:layout_height="43dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/mari"
                    android:tag="r"
                    android:text="책이름:"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:fontFamily="@font/mari"
                    android:gravity="center_horizontal|left|center_vertical"
                    android:hint="책이름"
                    android:textColor="#0C0C0C"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="138dp"
                    android:layout_height="43dp"
                    android:fontFamily="@font/mari"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="저자:"
                    android:textColor="#040303"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:gravity="center_horizontal|left|center_vertical"
                    android:hint="저자"
                    android:fontFamily="@font/mari"
                    android:textColor="#0C0C0C"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="104dp"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/nextbtn_0"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_custom"
                    android:text="다음단계"
                    android:fontFamily="@font/mari"
                    android:textColor="#FAF6F6"
                    android:textSize="20sp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>